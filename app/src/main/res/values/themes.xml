<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Headway" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_grey</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@color/grey</item>\
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>
</resources>